<view>
  <scroll-view class="playList" scroll-top="{{scrollTop}}" scroll-y="true" bindscrolltolower="bindDownLoad" bindscroll="scroll" bindscrolltoupper="refresh">
    <image class="home-image" src="/image/home.jpeg" mode='scaleToFill'> </image>
    <view style='background:#e5e9e8;width:100%;height:30px;margin-top:-6px'>
      <text style='color:#545857;margin-left:7px;font-size:small'>共{{items.length}}期</text>
    </view>
    <view wx:for="{{items}}" wx:for-index="key" wx:for-item="item">
      <view class='playList-item' bindtap="play" id='{{key}}'>
        <text class='playList-index'>{{items.length-key}}</text>
        <view class='flex-wrap' style='flex-direction:column;justify-content:center;'>
          <text style='color:#252928' style='margin-left:3px;font-size:33rpx'>{{item.title}}</text>
          <view style=''>
            <text class='textFont-playItem' style='margin-left:3px'>{{item.createTime}}</text>
            <text class='textFont-playItem' style='margin-left:15px'>{{item.playCount}}</text>
            <text class='textFont-playItem' style='margin-left:15px'>00:00</text>
          </view>
        </view>
      </view>
      <!-- 分割线 -->
      <view style='width:100%;height:1px;background:#f0f4f7'>
        <view style='height:1px;background:#d9dde0;margin-left:45px'></view>
      </view>
    </view>
  </scroll-view>

  <view class='playBar'>
    <image src='{{currentItem.coverImgUrl}}' bindtap="onPlayBarTap" style='width:40px;height:40px;margin-left:6px;margin-top:5px;margin-bottom:5px;margin-right:6px;position:fixed' mode='scaleToFill'></image>
    <image src='{{playIcon}}' bindtap="onPlayBarTap" class="{{showPlayBarButton?'show':'hide'}}" style='width:30px;height:30px;margin-left:11px;margin-top:10px;margin-bottom:5px;margin-right:6px;position:fixed' mode='scaleToFill'></image>
    <view style='display:flex;width:100%;flex-direction:column;justify-content:center;margin-left:50px;margin-right:10px;'>
      <view style='display:flex;flex-direction:row;margin-bottom:7px;align-items:baseline;justify-content:space-between'>
        <text style='font-size:32rpx;width:100%;'>{{currentItem.title}}</text>
        <text class='textFont-playItem' style='margin-left:6px;'>{{currentTime}}/{{duration}}</text>
      </view>
      <progress style='' percent="{{currentProgress}}" color="#09BB07" stroke-width="1" />
    </view>
  </view>
</view>